    {
      "name": "5. Login - Juan Perez (Exitoso & Auto-Save Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "var jsonData = pm.response.json();",
              "",
              "pm.test(\"Token exists\", function () {",
              "    pm.expect(jsonData.token).to.not.be.null;",
              "});",
              "",
              "// SCRIPT AUTOMÁTICO:",
              "// Guarda el token en la variable 'jwt_token' de la colección",
              "// para que no tengas que copiar y pegar manualmente en otras pruebas.",
              "pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
              "console.log(\"Token actualizado para: \" + jsonData.username);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"juan@test.com\",\n  \"password\": \"password\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "description": "Se loguea con el usuario 'juan_perez' definido en el script data.sql. La contraseña es 'password'."
      },
      "response": []
    },
