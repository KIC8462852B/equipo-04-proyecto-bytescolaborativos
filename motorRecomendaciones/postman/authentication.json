              "});",
              "",
              "pm.test(\"Error message mentions email usage\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.contain(\"correo electrónico ya está en uso\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"juan@test.com\",\n  \"username\": \"otro_juan\",\n  \"password\": \"password123\",\n  \"roles\": [\"PLAYER\"]\n}",
          "options": {
